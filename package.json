{
	"name": "bid-backend",
	"version": "1.0.0",
	"description": "bid-backend",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "esbuild src/main.ts --bundle --platform=node --format=esm --outdir=dist --packages=external",
		"dev": "tsx watch src/main.ts | pino-pretty -c",
