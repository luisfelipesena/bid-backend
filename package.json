	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/node": "^20.14.12",
		"biome": "^0.3.3",
		"pino-pretty": "^11.2.2",
		"tsx": "^4.16.2",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"@types/express": "^4.17.21",
		"express": "^4.19.2"
